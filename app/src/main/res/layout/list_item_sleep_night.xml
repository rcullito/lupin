<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
      name="resultsViewModel"
      type="com.example.diceroller.ResultsViewModel" />
    <variable
      name="sleep"
      type="com.example.diceroller.database.SleepPosition" />
    <variable
      name="clickListener" type="com.example.diceroller.SleepNightListener"/>
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/sleep_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:onClick="@{() -> clickListener.onClick()}"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
